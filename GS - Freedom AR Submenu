    //Verify Formulas
function showFormula() {
  var ss = SpreadsheetApp.getActive().getSheetByName("STAllPayments");
  var sheet = ss.activate();
sheet.hideColumns(2); // Hides Column B
sheet.hideColumns(3); // Hides Column C
sheet.hideColumns(4); // Hides Column D
sheet.hideColumns(5); // Hides Column E
sheet.hideColumns(6); // Hides Column F
sheet.hideColumns(7); // Hides Column G
sheet.hideColumns(8); // Hides Column H
