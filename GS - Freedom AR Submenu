sheet.hideColumns(9); // Hides Column I
sheet.hideColumns(10); // Hides Column J
sheet.hideColumns(13); // Hides Column M
sheet.hideColumns(14); // Hides Column N
sheet.hideColumns(18); // Hides Column R
sheet.hideColumns(20); // Hides Column T
sheet.hideColumns(21); // Hides Column U
sheet.hideColumns(22); // Hides Column V
sheet.hideColumns(23); // Hides Column W
sheet.hideColumns(24); // Hides Column X
